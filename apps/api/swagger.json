{
"openapi": "3.0.0",
"info": {
  "title": "Tracker Care Of API",
  "description": "Patients tracking system API",
  "version": "1.0.0"
},
"servers": [
  {
    "url": "http://localhost:8080",
    "description": "Development server"
  }
],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register new user",
        "tags": [ "Auth" ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [ "email", "password" ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "session_uuid": { "type": "string" },
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "session_uuid": "123e4567-e89b-12d3-a456-426614174000",
                  "message": "User registered successfully"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Session cookie",
                "schema": {
                  "type": "string",
                  "example": "session_uuid=123e4567-e89b-12d3-a456-426614174000; Path=/; Max-Age=86400; HttpOnly; SameSite=Strict"
                }
              }
            }
          },
          "400": { "description": "User already exists or invalid request" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "User login",
        "tags": [ "Auth" ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [ "email", "password" ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "session_uuid": { "type": "string" },
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "session_uuid": "123e4567-e89b-12d3-a456-426614174000",
                  "message": "Login successful"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "Session cookie",
                "schema": {
                  "type": "string",
                  "example": "session_uuid=123e4567-e89b-12d3-a456-426614174000; Path=/; Max-Age=86400; HttpOnly; SameSite=Strict"
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "User logout",
        "tags": [ "Auth" ],
        "responses": {
          "200": {
            "description": "Logged out successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "session_uuid": { "type": "string" },
                    "message": { "type": "string" }
                  }
                },
                "example": {
                  "session_uuid": "",
                  "message": "Logged out successfully"
                }
              }
            }
          }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/auth/user": {
      "delete": {
        "summary": "Delete current user",
        "tags": [ "Auth" ],
        "responses": {
          "204": { "description": "User deleted" },
          "401": { "description": "Unauthorized" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/patients": {
      "get": {
        "summary": "Get patients list",
        "tags": [ "Patients" ],
        "responses": {
          "200": {
            "description": "List of patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Patient"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "name": "John Doe",
                    "birth_date": "1990-01-15",
                    "created_at": "2024-01-01T10:00:00Z"
                  }
                ]
              }
            }
          },
          "401": { "description": "Unauthorized" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      },
      "post": {
        "summary": "Create patient",
        "tags": [ "Patients" ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [ "name", "birth_date" ],
                "properties": {
                  "name": { "type": "string" },
                  "birth_date": {
                    "type": "string",
                    "format": "date"
                  }
                }
              },
              "example": {
                "name": "John Doe",
                "birth_date": "1990-01-15"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Patient created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Patient"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/patients/{id}": {
      "get": {
        "summary": "Get patient by ID",
        "tags": [ "Patients" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Patient ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Patient details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Patient"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Access denied" },
          "404": { "description": "Patient not found" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Delete patient",
        "tags": [ "Patients" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Patient ID"
          }
        ],
        "responses": {
          "204": { "description": "Patient deleted" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Access denied" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/water": {
      "get": {
        "summary": "Get water records",
        "tags": [ "Water" ],
        "responses": {
          "200": {
            "description": "List of water records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WaterRecord"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "lastWater": "2024-01-15T14:30:00",
                    "frequency": 8,
                    "frequencyMeasure": "glasses"
                  }
                ]
              }
            }
          },
          "401": { "description": "Unauthorized" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/water/{id}": {
      "delete": {
        "summary": "Delete water record",
        "tags": [ "Water" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Water record ID"
          }
        ],
        "responses": {
          "204": { "description": "Water record deleted" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Access denied" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/anamnesis/{patientId}": {
      "get": {
        "summary": "Get anamnesis records for patient",
        "tags": [ "Anamnesis" ],
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Patient ID"
          }
        ],
        "responses": {
          "200": {
            "description": "List of anamnesis records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Anamnesis"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "description": "Regular checkup",
                    "photo_url": "https://example.com/photo.jpg",
                    "date": "2024-01-15T10:00:00Z"
                  }
                ]
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Access denied" },
          "404": { "description": "Patient not found" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/anamnesis": {
      "post": {
        "summary": "Create anamnesis record",
        "tags": [ "Anamnesis" ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [ "patient_id", "description" ],
                "properties": {
                  "patient_id": { "type": "integer" },
                  "description": { "type": "string" },
                  "photo_url": { "type": "string" }
                }
              },
              "example": {
                "patient_id": 1,
                "description": "Regular checkup",
                "photo_url": "https://example.com/photo.jpg"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Anamnesis created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Anamnesis"
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Access denied" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    },
    "/api/anamnesis/{id}": {
      "delete": {
        "summary": "Delete anamnesis record",
        "tags": [ "Anamnesis" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Anamnesis record ID"
          }
        ],
        "responses": {
          "204": { "description": "Anamnesis deleted" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Access denied" }
        },
        "security": [
          {
            "cookieAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "session_uuid",
        "description": "Session UUID stored in HTTP-only cookie"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "user_uuid": {
            "type": "string",
            "description": "Unique UUID identifier for the user.",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "description": "Email address of the user.",
            "format": "email"
          },
          "password_hash": {
            "type": "string",
            "description": "Hashed password for the user account."
          },
          "created_at": {
            "type": "string",
            "description": "Timestamp when the user was created.",
            "format": "date-time"
          }
        }
      },
      "Patient": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the patient."
          },
          "name": {
            "type": "string",
            "description": "Name of the patient."
          },
          "birth_date": {
            "type": "string",
            "description": "Birth date of the patient.",
            "format": "date",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "description": "Timestamp when the patient record was created.",
            "format": "date-time"
          }
        }
      },
      "WaterRecord": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Patient ID associated with this water record."
          },
          "lastWater": {
            "type": "string",
            "description": "Timestamp of last water intake.",
            "format": "date-time"
          },
          "frequency": {
            "type": "integer",
            "description": "Water intake frequency."
          },
          "frequencyMeasure": {
            "type": "string",
            "description": "Unit of measurement for frequency (e.g., glasses, ml)."
          }
        }
      },
      "Anamnesis": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the anamnesis record."
          },
          "description": {
            "type": "string",
            "description": "Description of the anamnesis."
          },
          "photo_url": {
            "type": "string",
            "description": "Optional URL of the photo related to the anamnesis.",
            "nullable": true
          },
          "date": {
            "type": "string",
            "description": "Date when the anamnesis record was created.",
            "format": "date-time"
          }
        }
      }
    }
  }
}